/**
 * Implementation of hook_uninstall().
 */
function variables_uninstall() {
  // Delete menu links.
  db_query("DELETE FROM {menu_links} WHERE link_title in ('Variables','List Variables','Add A Variable','Edit Variables','Delete Variables')");
  menu_cache_clear_all();  
}

function variables_disable(){
	db_query("DELETE FROM {menu_links} WHERE link_title in ('Variables','List Variables','Add A Variable','Edit Variables','Delete Variables')");
